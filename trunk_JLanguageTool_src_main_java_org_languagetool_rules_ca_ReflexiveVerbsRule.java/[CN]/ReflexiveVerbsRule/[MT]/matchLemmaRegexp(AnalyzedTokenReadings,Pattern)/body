{
  boolean matches=false;
  final int readingsLen=aToken.getReadingsLength();
  for (int i=0; i < readingsLen; i++) {
    final String posTag=aToken.getAnalyzedToken(i).getLemma();
    if (posTag != null) {
      final Matcher m=pattern.matcher(posTag);
      if (m.matches()) {
        matches=true;
        break;
      }
    }
  }
  return matches;
}
