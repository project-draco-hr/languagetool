{
  final JLanguageTool langTool;
  List<RuleMatch> matches;
  langTool=new JLanguageTool(new German());
  matches=langTool.check("Das ist aufw??ndig. Aber hallo. Es ist wirklich aufw??ndig.");
  assertEquals(0,matches.size());
  matches=langTool.check("Das ist aufwendig. Aber hallo. Es ist wirklich aufw??ndig.");
  assertEquals(1,matches.size());
  matches=langTool.check("Das ist aufw??ndig. Aber hallo. Es ist wirklich aufwendig.");
  assertEquals(1,matches.size());
  matches=langTool.check("Das ist aufwendig. Aber hallo. Es ist wirklich aufwendiger als...");
  assertEquals(0,matches.size());
  matches=langTool.check("Das ist aufwendig. Aber hallo. Es ist wirklich aufw??ndiger als...");
  assertEquals(1,matches.size());
  matches=langTool.check("Das ist aufw??ndig. Aber hallo. Es ist wirklich aufwendiger als...");
  assertEquals(1,matches.size());
  matches=langTool.check("Das ist das aufw??ndigste. Aber hallo. Es ist wirklich aufwendiger als...");
  assertEquals(1,matches.size());
  matches=langTool.check("Das ist das aufw??ndigste. Aber hallo. Es ist wirklich aufwendig.");
  assertEquals(1,matches.size());
  matches=langTool.check("Das ist das aufw??ndigste.\n\nAber hallo. Es ist wirklich aufwendig.");
  assertEquals(1,matches.size());
}
