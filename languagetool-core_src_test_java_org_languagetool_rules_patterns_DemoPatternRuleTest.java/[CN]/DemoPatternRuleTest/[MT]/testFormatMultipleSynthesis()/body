{
  String[] suggestions1={"blah blah","foo bar"};
  assertEquals("This is how you should write: <suggestion>blah blah</suggestion>, <suggestion>foo bar</suggestion>.",PatternRuleMatcher.formatMultipleSynthesis(suggestions1,"This is how you should write: <suggestion>","</suggestion>."));
  String[] suggestions2={"test"," "};
  assertEquals("This is how you should write: <suggestion>test</suggestion>, <suggestion> </suggestion>.",PatternRuleMatcher.formatMultipleSynthesis(suggestions2,"This is how you should write: <suggestion>","</suggestion>."));
}
