{
  final String aboutText=StringTools.getLabel(messages.getString("guiMenuAbout"));
  final XMessageBoxFactory messageBoxFactory=(XMessageBoxFactory)UnoRuntime.queryInterface(XMessageBoxFactory.class,winPeer.getToolkit());
  final Rectangle messageBoxRectangle=new Rectangle();
  final XMessageBox box=messageBoxFactory.createMessageBox(winPeer,messageBoxRectangle,"infobox",0,aboutText,"LanguageTool " + JLanguageTool.VERSION + "\n"+ "Copyright (C) 2005-2009 Daniel Naber\n"+ "This software is licensed under the GNU Lesser General Public License.\n"+ "LanguageTool Homepage: http://www.languagetool.org/\n\n"+ "Maintainers of the language modules:\n"+ Language.getAllMaintainers(messages));
  box.execute();
}
