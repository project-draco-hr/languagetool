{
  try {
    filename="" + JLanguageTool.getDataBroker().getResourceDir() + "/"+ language.getShortName()+ "/"+ language.getName().toLowerCase()+ ".dict";
    dictFile=new File(filename);
    dictLookup=(DictionaryLookup)loadDictionary();
