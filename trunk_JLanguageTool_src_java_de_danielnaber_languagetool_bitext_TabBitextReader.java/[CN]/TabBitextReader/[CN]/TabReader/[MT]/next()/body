{
  try {
    final StringPair result=nextPair;
    sentencePos=nextPair.getSource().length() + 1;
    if (nextLine != null) {
      prevLine=nextLine;
      nextLine=in.readLine();
      nextPair=tab2StringPair(nextLine);
      lineCount++;
      if (nextLine == null) {
        in.close();
      }
    }
    return result;
  }
 catch (  IOException e) {
    throw new IllegalArgumentException(e);
  }
}
