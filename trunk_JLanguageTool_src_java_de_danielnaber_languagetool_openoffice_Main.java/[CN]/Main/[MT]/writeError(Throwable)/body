{
  FileWriter fw;
  try {
    fw=new FileWriter("languagetool.log");
    fw.write(e.toString() + "\r\n");
    final StackTraceElement[] el=e.getStackTrace();
    for (    final StackTraceElement element : el) {
      fw.write(element.toString() + "\r\n");
    }
    fw.close();
  }
 catch (  final IOException e1) {
    e1.printStackTrace();
  }
}
