{
  final StringWriter stringWriter=new StringWriter();
  final PrintWriter printWriter=new PrintWriter(stringWriter);
  e.printStackTrace(printWriter);
  String msg="An error has occurred in LanguageTool " + JLanguageTool.VERSION + ":\n"+ e.toString()+ "\nStacktrace:\n";
  msg+=stringWriter.toString();
  final String metaInfo="OS: " + System.getProperty("os.name") + " on "+ System.getProperty("os.arch")+ ", Java version "+ System.getProperty("java.vm.version")+ " from "+ System.getProperty("java.vm.vendor");
  msg+=metaInfo;
  final DialogThread dt=new DialogThread(msg);
  dt.start();
}
