{
  for (  StringPair srcAndTrg : reader) {
    final List<RuleMatch> curMatches=checkBitext(srcAndTrg.getSource(),srcAndTrg.getTarget(),sourceLt,targetLt,bRules);
    final List<RuleMatch> fixedMatches=new ArrayList<RuleMatch>();
    for (    RuleMatch thisMatch : curMatches) {
      fixedMatches.add(targetLt.adjustRuleMatchPos(thisMatch,0,reader.getTargetColumnCount(),reader.getLineCount(),reader.getCurrentLine()));
    }
    if (fixedMatches.size() > 0) {
      System.out.println(correctTextFromMatches(srcAndTrg.getTarget(),fixedMatches));
    }
 else {
      System.out.println(srcAndTrg.getTarget());
    }
  }
}
