{
  String space=" ";
  if (word.length() == 1) {
    final char c=word.charAt(0);
    if ("fr".equals(language.getShortName())) {
      if (c == '.' || c == ',') {
        space="";
      }
    }
 else {
      if (c == '.' || c == ',' || c == ';' || c == ':' || c == '?' || c == '!') {
        space="";
      }
    }
  }
  return space;
}
