{
  this.port=config.getPort();
  try {
    if (host == null) {
      server=HttpsServer.create(new InetSocketAddress(port),0);
    }
 else {
      server=HttpsServer.create(new InetSocketAddress(host,port),0);
    }
    final SSLContext sslContext=getSslContext(config.getKeystore(),config.getKeyStorePassword());
    final HttpsConfigurator configurator=getConfigurator(sslContext);
    ((HttpsServer)server).setHttpsConfigurator(configurator);
    server.createContext("/",new LanguageToolHttpHandler(config.isVerbose(),allowedIps,runInternally));
  }
 catch (  BindException e) {
    throw new PortBindingException("LanguageTool HTTPS server could not be started on host '" + host + "', port "+ port+ " - maybe something else is running on that port already?",e);
  }
catch (  Exception e) {
    throw new RuntimeException("LanguageTool HTTPS server could not be started on host '" + host + "', port "+ port,e);
  }
}
