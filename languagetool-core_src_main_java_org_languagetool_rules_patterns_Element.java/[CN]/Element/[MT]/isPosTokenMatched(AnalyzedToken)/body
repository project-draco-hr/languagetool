{
  if (posToken == null) {
    return true;
  }
  if (token.getPOSTag() == null) {
    if (posUnknown) {
      return token.hasNoTag();
    }
    return false;
  }
  boolean match;
  if (posRegExp) {
    final Matcher mPos=pPos.matcher(token.getPOSTag());
    match=mPos.matches();
  }
 else {
    match=posToken.equals(token.getPOSTag());
  }
  if (!match && posUnknown) {
    match=token.hasNoTag();
  }
  return match;
}
