{
  RussianUnpairedBracketsRule rule=new RussianUnpairedBracketsRule(TestTools.getEnglishMessages(),new Russian());
  RuleMatch[] matches;
  JLanguageTool langTool=new JLanguageTool(new Russian());
  matches=rule.match(langTool.getAnalyzedSentence("(?? ???????? ?? ?????????? ???? ????????????????????, ?? ???????? ???? ???? ???????? ????????)."));
  assertEquals(0,matches.length);
  matches=rule.match(langTool.getAnalyzedSentence("?????????? ?????????????? ???????????? ???????????? ???????????? ?????????????????????????????? ?????????????? (1824)."));
  assertEquals(0,matches.length);
  matches=rule.match(langTool.getAnalyzedSentence("?? \"??\" ??."));
  assertEquals(0,matches.length);
  matches=rule.match(langTool.getAnalyzedSentence("??), ??), ??)..., ????), ????) ?? 1??)"));
  assertEquals(0,matches.length);
  matches=rule.match(langTool.getAnalyzedSentence("?? ?????????? ?????????? ?????? ?????????? ?? ?????? 1823 ?? ???????????????? ?????????? ?? ???????????? '?????????????? ????????????."));
  assertEquals(1,matches.length);
}
