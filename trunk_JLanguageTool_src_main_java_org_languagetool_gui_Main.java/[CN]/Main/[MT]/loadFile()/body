{
  final File file=Tools.openFileDialog(frame,new PlainTextFileFilter());
  if (file == null) {
    return;
  }
  try {
    final String fileContents=StringTools.readFile(new FileInputStream(file.getAbsolutePath()));
    textArea.setText(fileContents);
    checkTextAndDisplayResults();
  }
 catch (  IOException e) {
    Tools.showError(e);
  }
}
