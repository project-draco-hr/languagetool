{
  stopServer();
  try {
    final Language currentLanguage=getCurrentLanguage();
    config.saveConfiguration(getCurrentLanguageTool(currentLanguage).getLanguage());
  }
 catch (  IOException e) {
    Tools.showError(e);
  }
  frame.setVisible(false);
  JLanguageTool.removeTemporaryFiles();
  System.exit(0);
}
