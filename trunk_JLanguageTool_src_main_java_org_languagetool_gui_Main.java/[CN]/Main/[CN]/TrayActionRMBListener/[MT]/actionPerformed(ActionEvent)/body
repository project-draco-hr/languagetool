{
  if (e.getActionCommand().equalsIgnoreCase(StringTools.getLabel(messages.getString("guiMenuCheckClipboard")))) {
    restoreFromTrayAndCheck();
  }
 else   if (e.getActionCommand().equalsIgnoreCase(StringTools.getLabel(messages.getString("guiMenuShowMainWindow")))) {
    restoreFromTray();
  }
 else   if (e.getActionCommand().equalsIgnoreCase(StringTools.getLabel(messages.getString("guiMenuQuit")))) {
    quit();
  }
 else {
    JOptionPane.showMessageDialog(null,"Unknown action: " + e.getActionCommand(),"Error",JOptionPane.ERROR_MESSAGE);
  }
}
