{
  AnalyzedSentence sentence=input;
  try {
    if (disambiguationRules == null) {
      final String defaultPatternFilename="/resource/ro/" + DISAMB_FILE;
      disambiguationRules=loadPatternRules(defaultPatternFilename);
    }
    for (    final DisambiguationPatternRule dr : disambiguationRules) {
      sentence=dr.replace(sentence);
    }
  }
 catch (  final ParserConfigurationException e) {
    throw new RuntimeException("Problems with parsing disambiguation file: " + Language.ENGLISH.getShortName() + "/"+ DISAMB_FILE+ e.getMessage(),e);
  }
catch (  final SAXException e) {
    throw new RuntimeException("Problems with parsing disambiguation file: " + e.getMessage(),e);
  }
  return sentence;
}
