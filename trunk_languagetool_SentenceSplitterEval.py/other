import sys
import re
import Entities
import SentenceSplitter
if (__name__ == '__main__'):
    prg = SentenceSplitterEval()
    if (len(sys.argv) <= 1):
        print 'Usage: ./SentenceSplitterEval.py <bnc_sampler_files>'
    else:
        for filename in sys.argv[1:]:
            print filename
            f = open(filename)
            bnc_string = f.read()
            f.close()
            prg.run(bnc_string)
