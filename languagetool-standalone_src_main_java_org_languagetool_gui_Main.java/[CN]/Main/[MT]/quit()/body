{
  stopServer();
  try {
    config.setLanguage(((I18nLanguage)languageBox.getSelectedItem()).getLanguage());
    config.saveConfiguration(getCurrentLanguage());
  }
 catch (  IOException e) {
    Tools.showError(e);
  }
  frame.setVisible(false);
  JLanguageTool.removeTemporaryFiles();
  System.exit(0);
}
