{
  StringBuilder sb=new StringBuilder();
  if (currentFile != null) {
    sb.append(currentFile.getName());
    if (BOM != null) {
      sb.append(" (").append(BOM.getCharsetName()).append(')');
    }
    sb.append(" - ");
  }
  sb.append("LanguageTool ").append(JLanguageTool.VERSION);
  frame.setTitle(sb.toString());
}
