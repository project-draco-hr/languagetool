{
  final InputStreamReader isr;
  if (!isStdIn(filename)) {
    final File file=new File(filename);
    if (encoding != null) {
      isr=new InputStreamReader(new BufferedInputStream(new FileInputStream(file)),encoding);
    }
 else {
      isr=new InputStreamReader(new BufferedInputStream(new FileInputStream(file)));
    }
  }
 else {
    if (encoding != null) {
      isr=new InputStreamReader(new BufferedInputStream(System.in),encoding);
    }
 else {
      isr=new InputStreamReader(new BufferedInputStream(System.in));
    }
  }
  return isr;
}
