{
  if (testMode) {
    throw new RuntimeException(e);
  }
  String msg="An error has occurred in LanguageTool " + JLanguageTool.VERSION + ":\n"+ e+ "\nStacktrace:\n";
  msg+=Tools.getFullStackTrace(e);
  final String metaInfo="OS: " + System.getProperty("os.name") + " on "+ System.getProperty("os.arch")+ ", Java version "+ System.getProperty("java.version")+ " from "+ System.getProperty("java.vm.vendor");
  msg+=metaInfo;
  final DialogThread dt=new DialogThread(msg);
  e.printStackTrace();
  dt.start();
}
