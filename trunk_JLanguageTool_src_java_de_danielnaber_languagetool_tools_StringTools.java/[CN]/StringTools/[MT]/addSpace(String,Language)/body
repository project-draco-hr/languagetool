{
  String space=" ";
  final int len=word.length();
  if (len == 1) {
    final char c=word.charAt(0);
    if (Language.FRENCH.equals(language)) {
      if (c == '.' || c == ',') {
        space="";
      }
    }
 else {
      if (c == '.' || c == ',' || c == ';' || c == ':' || c == '?' || c == '!') {
        space="";
      }
    }
  }
  return space;
}
