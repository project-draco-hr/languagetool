{
  final StringBuilder sb=new StringBuilder();
  final int n=s.length();
  for (int i=0; i < n; i++) {
    final char c=s.charAt(i);
switch (c) {
case '<':
      sb.append("&lt;");
    break;
case '>':
  sb.append("&gt;");
break;
case '&':
sb.append("&amp;");
break;
case '"':
sb.append("&quot;");
break;
default :
sb.append(c);
break;
}
}
return sb.toString();
}
