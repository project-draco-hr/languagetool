import socket
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect(('127.0.0.1', 50100))
print 'Connected'
s.sendall('<text>A sentence bigger then a short one.</text>')
print 'Data sent'
data = ''
while 1:
    received = s.recv(1024)
    data = ('%s%s' % (data, received))
    if (not received):
        break
s.close()
print 'Received:'
print data
