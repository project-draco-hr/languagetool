{
  final ArrayList<String> list=new ArrayList<String>();
  int endIndex, beginIndex=0;
  String str=new String();
  while (beginIndex < text.length()) {
    endIndex=text.indexOf("???",beginIndex) + 1;
    if (endIndex == 0) {
      endIndex=text.length();
    }
    str=text.substring(beginIndex,endIndex);
    list.add(str);
    beginIndex=endIndex;
  }
  return list;
}
