{
  String[] rulePatternParts=pattern.split("\\s+");
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < rulePatternParts.length; i++) {
    sb.append("\"");
    sb.append(rulePatternParts[i]);
    sb.append("\"");
    if (i < rulePatternParts.length - 1)     sb.append(" ");
  }
  return sb.toString();
}
