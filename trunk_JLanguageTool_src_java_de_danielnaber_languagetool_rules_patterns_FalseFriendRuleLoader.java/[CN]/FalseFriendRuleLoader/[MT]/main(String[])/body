{
  final FalseFriendRuleLoader prg=new FalseFriendRuleLoader();
  List<PatternRule> l=prg.getRules(JLanguageTool.getDataBroker().getFromRulesDirAsStream("/false-friends.xml"),Language.ENGLISH,Language.GERMAN);
  System.out.println("Hints for German native speakers:");
  for (  final PatternRule rule : l) {
    System.out.println(rule);
  }
  System.out.println("=======================================");
  System.out.println("Hints for English native speakers:");
  l=prg.getRules(JLanguageTool.getDataBroker().getFromRulesDirAsStream("/false-friends.xml"),Language.GERMAN,Language.ENGLISH);
  for (  final PatternRule rule : l) {
    System.out.println(rule);
  }
}
