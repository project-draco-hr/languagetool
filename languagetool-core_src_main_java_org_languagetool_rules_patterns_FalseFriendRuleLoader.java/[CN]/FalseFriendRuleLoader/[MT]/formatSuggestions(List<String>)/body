{
  final StringBuilder sb=new StringBuilder();
  for (final Iterator<String> iter=l.iterator(); iter.hasNext(); ) {
    final String s=iter.next();
    sb.append("<suggestion>");
    sb.append(s);
    sb.append("</suggestion>");
    if (iter.hasNext()) {
      sb.append(", ");
    }
  }
  return sb.toString();
}
