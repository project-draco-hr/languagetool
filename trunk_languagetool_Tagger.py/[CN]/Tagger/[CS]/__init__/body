def __init__(self, db_word_name=None, db_seq_name1=None, db_seq_name2=None):
    'Initialize the tagger, optionally using the given\n\t\tfile names that will be used to load and save data later.'
    self.data_table = None
    self.seqs_table_followed_by = None
    self.seqs_table_follows = None
    if db_word_name:
        self.db_word_name = db_word_name
    if db_seq_name1:
        self.db_seq_name1 = db_seq_name1
    if db_seq_name2:
        self.db_seq_name2 = db_seq_name2
    self.word_count = 0
    return
