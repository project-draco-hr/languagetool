def getBNCTuples(self, text):
    'Return a list of (tag, word) tuples from text if\n\t\ttext is a BNC Sampler text in XML or SGML format. Otherwise\n\t\treturn an empty list. The tags are mapped from the C7 tag set\n\t\tto the much smaller C5 tag set.'
    l = []
    pos = 0
    while 1:
        m = self.bnc_regex.search(text, pos)
        if (not m):
            break
        tag = m.group(1)
        if self.mapping.has_key(tag):
            tag = self.mapping[tag]
        else:
            pass
        l.append((tag, m.group(2).strip()))
        pos = (m.start() + 1)
    return l
