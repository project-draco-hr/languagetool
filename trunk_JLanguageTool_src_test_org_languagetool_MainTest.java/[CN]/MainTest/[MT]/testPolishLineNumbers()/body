{
  File input=populateFile("Test.\n" + "Test.\n" + "Test.\n"+ "Test.\n"+ "Test.\n"+ "Test.\n"+ "\n"+ "Test kt??ry wyka??e b????d.");
  String[] args=new String[]{"-l","pl","-c","utf-8",input.getAbsolutePath()};
