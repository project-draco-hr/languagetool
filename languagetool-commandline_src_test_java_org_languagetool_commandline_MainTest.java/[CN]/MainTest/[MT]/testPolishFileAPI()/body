{
  final File input=writeToTempFile("To jest ??winia kt??ra si?? ??lini.");
  final String[] args={"-l","pl","--api","-c","utf-8",input.getAbsolutePath()};
  Main.main(args);
  final String output=new String(this.out.toByteArray(),"UTF-8");
