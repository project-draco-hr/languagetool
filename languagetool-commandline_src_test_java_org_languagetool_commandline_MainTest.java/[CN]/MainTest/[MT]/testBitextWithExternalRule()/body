{
  final File input=writeToTempFile("This is a red herring.\tTo jest czerwony ??led??.");
  final String[] args={"-l","pl","-c","UTF-8","--bitext","-m","en","--bitextrules",bitextFile.getAbsolutePath(),input.getAbsolutePath()};
