  List<String> tokens=new ArrayList<>();
  Iterator<String> itr=tokenList.iterator();
  while (itr.hasNext()) {
    String word=itr.next().replace("\u0001\u0001BR_APOS\u0001\u0001","???");
    tokens.add(word);
    if (!word.equals("???") && word.endsWith("???")) {
      itr.next();
    }
  }
  return tokens;
}
