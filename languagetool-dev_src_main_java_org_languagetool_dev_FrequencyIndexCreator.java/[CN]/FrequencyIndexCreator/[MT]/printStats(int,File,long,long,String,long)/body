{
  long microsNow=System.nanoTime() / 1000;
  float millisPerDoc=(microsNow - startTimeMicros) / Math.max(1,i);
  NumberFormat format=NumberFormat.getNumberInstance(Locale.US);
  System.out.printf("input:%s doc:%s line:%s ngram:%s occ:%s (%.0f??s/doc)\n",inputFile.getName(),format.format(i),format.format(lineCount),prevText,format.format(docCount),millisPerDoc);
}
