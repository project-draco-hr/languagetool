{
  final Language language=getLanguageForShortNameOrNull(langCode);
  if (language == null) {
    final StringBuilder sb=new StringBuilder();
    for (    Language realLanguage : LANGUAGES) {
      sb.append(' ').append(realLanguage.getShortNameWithCountryAndVariant());
    }
    throw new IllegalArgumentException("'" + langCode + "' is not a language code known to LanguageTool."+ " Supported language codes are:"+ sb.toString()+ ". The list of languages is read from "+ PROPERTIES_PATH+ " in the Java classpath. See http://wiki.languagetool.org/java-api for details.");
  }
  return language;
}
