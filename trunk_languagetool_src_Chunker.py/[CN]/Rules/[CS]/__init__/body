def __init__(self):
    'Read the chunking rules from data/chunks.txt. The rules\n\t\tcan then be access via Rules.rules.'
    self.rules = []
    f = open(self.chunk_rules)
    lines = f.readlines()
    f.close()
    for line in lines:
        if line.startswith('#'):
            continue
        rule = Rule(line.strip())
        self.rules.append(rule)
    return
