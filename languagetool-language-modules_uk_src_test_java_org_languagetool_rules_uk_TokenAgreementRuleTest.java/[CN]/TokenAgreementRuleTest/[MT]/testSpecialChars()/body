{
  TokenAgreementRule rule=new TokenAgreementRule(TestTools.getMessages("uk"));
  JLanguageTool langTool=new JLanguageTool(new Ukrainian());
  RuleMatch[] matches=rule.match(langTool.getAnalyzedSentence("???? ??????????????, ???? ????\u00AD????????, ???? ??????????????"));
  assertEquals(3,matches.length);
  assertEquals(3,matches[0].getFromPos());
  assertEquals(10,matches[0].getToPos());
  assertEquals(Arrays.asList("????????????","??????????"),matches[0].getSuggestedReplacements());
  assertEquals(15,matches[1].getFromPos());
  assertEquals(Arrays.asList("????????????","??????????"),matches[1].getSuggestedReplacements());
  assertEquals(27,matches[2].getFromPos());
  assertEquals(Arrays.asList("??????????????","????????????"),matches[2].getSuggestedReplacements());
}
