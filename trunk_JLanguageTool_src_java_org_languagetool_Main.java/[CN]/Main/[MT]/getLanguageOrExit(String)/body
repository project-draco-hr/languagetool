{
  Language language=null;
  final List<String> supportedLanguages=new ArrayList<String>();
  for (  final Language lang : Language.LANGUAGES) {
    supportedLanguages.add(lang.getShortName());
    if (userSuppliedLang.equals(lang.getShortName())) {
      language=lang;
      break;
    }
  }
  if (language == null) {
    System.out.println("Unknown language '" + userSuppliedLang + "'. Supported languages are: "+ supportedLanguages);
    exitWithUsageMessage();
  }
  return language;
}
