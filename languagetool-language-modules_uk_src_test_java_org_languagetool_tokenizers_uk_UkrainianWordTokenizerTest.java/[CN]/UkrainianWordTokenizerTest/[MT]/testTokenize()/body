{
  List<String> testList=w.tokenize("???????? ?????????????? ????????????.");
  assertEquals(Arrays.asList("????????"," ","??????????????"," ","????????????","."),testList);
  testList=w.tokenize("???????? ?????????????? ?????????????? ???????????????????.");
  assertEquals(Arrays.asList("????????"," ","??????????????"," ","??'??????????"," ","??????'??????????","."),testList);
  testList=w.tokenize("?? ??????????????????(????????????????");
  assertEquals(Arrays.asList("??"," ","??????????????????","(","????????????????"),testList);
  testList=w.tokenize("??????(??) ???? ????(??)??");
  assertEquals(Arrays.asList("??????(??)"," ","????"," ","????(??)??"),testList);
  testList=w.tokenize("???????????? ??... ??????????????????????");
  assertEquals(Arrays.asList("????????????"," ","??","..."," ","??????????????????????"),testList);
  testList=w.tokenize("????????????????????!.. ??????????");
  assertEquals(Arrays.asList("????????????????????","!.."," ","??????????"),testList);
  testList=w.tokenize("?????? ????????????.");
  assertEquals(Arrays.asList("??????"," ","????????????","."),testList);
  testList=w.tokenize("??? ????.");
  assertEquals(Arrays.asList("???"," ","????","."),testList);
  testList=w.tokenize("????????\u00AD????");
  assertEquals(Arrays.asList("????????\u00AD????"),testList);
  testList=w.tokenize("????????\u00AD\n????");
  assertEquals(Arrays.asList("????????\u00AD\n????"),testList);
}
