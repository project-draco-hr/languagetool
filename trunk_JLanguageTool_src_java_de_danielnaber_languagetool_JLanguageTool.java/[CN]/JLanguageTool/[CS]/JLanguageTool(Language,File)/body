{
  if (language == null) {
    throw new NullPointerException("language cannot be null");
  }
  basedir=basedirArg;
  this.language=language;
  ResourceBundle messages=ResourceBundle.getBundle("de.danielnaber.languagetool.MessagesBundle",language.getLocale());
  Rule[] allBuiltinRules=new Rule[]{new CommaWhitespaceRule(messages),new WordRepeatRule(messages,language),new DoublePunctuationRule(messages),new UppercaseSentenceStartRule(messages),new AvsAnRule(),new WordCoherencyRule(),new CaseRule(),new WiederVsWiderRule(),new AgreementRule(),new DashRule()};
  for (int i=0; i < allBuiltinRules.length; i++) {
    if (allBuiltinRules[i].supportsLanguage(language))     builtinRules.add(allBuiltinRules[i]);
  }
  tagger=language.getTagger();
  sentenceTokenizer=language.getSentenceTokenizer();
  wordTokenizer=language.getWordTokenizer();
}
