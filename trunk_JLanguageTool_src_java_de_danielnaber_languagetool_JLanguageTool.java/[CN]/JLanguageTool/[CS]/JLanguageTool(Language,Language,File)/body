{
  if (language == null) {
    throw new NullPointerException("language cannot be null");
  }
  basedir=basedirArg;
  this.language=language;
  this.motherTongue=motherTongue;
  messages=getMessageBundle(language);
  Rule[] allBuiltinRules=new Rule[]{new CommaWhitespaceRule(messages),new WordRepeatRule(messages,language),new DoublePunctuationRule(messages),new UppercaseSentenceStartRule(messages),new AvsAnRule(messages),new WordCoherencyRule(messages),new CaseRule(messages),new WiederVsWiderRule(messages),new AgreementRule(messages),new DashRule(messages),new PolishWordRepeatRule(messages)};
  for (int i=0; i < allBuiltinRules.length; i++) {
    if (allBuiltinRules[i].supportsLanguage(language))     builtinRules.add(allBuiltinRules[i]);
  }
  tagger=language.getTagger();
  sentenceTokenizer=language.getSentenceTokenizer();
  wordTokenizer=language.getWordTokenizer();
}
