{
  FileReader fr=null;
  BufferedReader br=null;
  StringBuffer sb=new StringBuffer();
  try {
    fr=new FileReader(filename);
    br=new BufferedReader(fr);
    String line;
    while ((line=br.readLine()) != null) {
      sb.append(line);
    }
  }
  finally {
    if (br != null)     br.close();
    if (fr != null)     fr.close();
  }
  return sb.toString();
}
