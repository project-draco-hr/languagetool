{
  for (int i=0; i < args.length; i++) {
switch (args[i]) {
case "--config":
      parseConfigFile(new File(args[++i]));
    break;
case "-p":
case "--port":
  port=Integer.parseInt(args[++i]);
break;
case "-v":
case "--verbose":
verbose=true;
break;
case "--public":
publicAccess=true;
break;
case "--allow-origin":
allowOriginUrl=args[++i];
break;
}
}
}
