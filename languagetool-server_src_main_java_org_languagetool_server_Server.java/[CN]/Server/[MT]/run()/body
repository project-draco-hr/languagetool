{
  final String hostName=host != null ? host : "localhost";
  System.out.println("Starting LanguageTool " + JLanguageTool.VERSION + " (build date: "+ JLanguageTool.BUILD_DATE+ ") server on "+ getProtocol()+ "://"+ hostName+ ":"+ port+ "...");
  server.start();
  isRunning=true;
  System.out.println("Server started");
}
