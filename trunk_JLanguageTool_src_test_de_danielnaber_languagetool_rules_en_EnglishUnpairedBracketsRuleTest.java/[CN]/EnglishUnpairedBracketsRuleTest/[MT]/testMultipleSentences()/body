{
  final JLanguageTool tool=new JLanguageTool(Language.ENGLISH);
  tool.enableRule("EN_UNPAIRED_BRACKETS");
  List<RuleMatch> matches;
  matches=tool.check("This is multiple sentence text that contains a bracket: " + "[This is bracket. With some text.] and this continues.\n");
  assertEquals(0,matches.size());
  matches=tool.check("This is multiple sentence text that contains a bracket: " + "[This is bracket. With some text. And this continues.\n\n");
  assertEquals(1,matches.size());
  matches=tool.check("This is multiple sentence text that contains a bracket. " + "(This is bracket. \n\n With some text.) and this continues.");
  assertEquals(2,matches.size());
}
