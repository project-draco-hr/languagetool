{
  String plainText=sentence.getText();
  List<String> tokens=removeWhitespaceTokens(tokenizer.tokenize(plainText));
  int i=0;
  int pos=-1;
  for (  String t : tokens) {
    if (t.equals(token)) {
      pos=i;
    }
    i++;
  }
  if (pos == -1) {
    throw new RuntimeException("Not found: '" + token + "' in: '"+ plainText+ "'");
  }
  return pos;
}
