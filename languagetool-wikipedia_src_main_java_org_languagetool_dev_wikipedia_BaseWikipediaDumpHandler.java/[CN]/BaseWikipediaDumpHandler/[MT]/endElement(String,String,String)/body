{
  if (qName.equals("title")) {
    title=text.toString();
    text=new StringBuilder();
  }
 else   if (qName.equals("text")) {
    try {
      handleEndText();
    }
 catch (    Exception e) {
      System.err.println("Error checking text of '" + title + "', ignoring document. Stacktrace:");
      e.printStackTrace();
      text=new StringBuilder();
    }
  }
  inText=false;
}
