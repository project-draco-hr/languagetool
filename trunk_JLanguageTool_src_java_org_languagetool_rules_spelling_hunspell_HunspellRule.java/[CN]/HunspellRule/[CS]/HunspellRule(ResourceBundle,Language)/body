{
  super(messages,language);
  super.setCategory(new Category(messages.getString("category_typo")));
  final String langCountry=language.getShortName() + "_" + language.getCountryVariants()[0];
  final String shortDicPath="/" + language.getShortName() + "/hunspell/"+ langCountry+ ".dic";
  if (JLanguageTool.getDataBroker().resourceExists(shortDicPath)) {
    dictionary=Hunspell.getInstance().getDictionary(getDictionaryPath(langCountry,shortDicPath));
  }
}
