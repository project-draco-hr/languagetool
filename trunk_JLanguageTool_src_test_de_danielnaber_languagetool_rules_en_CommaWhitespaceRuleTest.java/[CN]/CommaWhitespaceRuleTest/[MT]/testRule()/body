{
  CommaWhitespaceRule rule=new CommaWhitespaceRule();
  RuleMatch[] matches;
  matches=rule.match(TestTools.getAnaylzedText("This is a test sentence."));
  assertEquals(0,matches.length);
  matches=rule.match(TestTools.getAnaylzedText("This, is, a test sentence."));
  assertEquals(0,matches.length);
  matches=rule.match(TestTools.getAnaylzedText("This , is a test sentence."));
  assertEquals(1,matches.length);
  matches=rule.match(TestTools.getAnaylzedText("This ,is a test sentence."));
  assertEquals(1,matches.length);
}
