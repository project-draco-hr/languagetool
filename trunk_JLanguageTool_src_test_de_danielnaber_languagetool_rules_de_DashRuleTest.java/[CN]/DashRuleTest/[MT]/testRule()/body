  assertEquals(0,rule.match(langTool.getAnalyzedSentence("Erst so -- Karl-Heinz aber...")).length);
  assertEquals(1,rule.match(langTool.getAnalyzedSentence("Die gro??e Di??ten- Erh??hung kam dann doch.")).length);
