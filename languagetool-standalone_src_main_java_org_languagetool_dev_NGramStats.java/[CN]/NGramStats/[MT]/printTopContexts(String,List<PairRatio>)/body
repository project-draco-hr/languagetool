{
  int max=500;
  int i=0;
  System.out.println("================================================");
  System.out.println("Top " + max + " contexts for '"+ word+ "':");
  for (  PairRatio ratio : ratios) {
    if (!ratio.term1.equals(word)) {
      continue;
    }
    System.out.printf(Locale.ENGLISH,"%dx advantage (%d/%d) for '%s' in: %s\n",ratio.ratio,ratio.term1Count,ratio.term2Count,ratio.term1,ratio.ngram);
    if (++i >= max) {
      break;
    }
  }
}
